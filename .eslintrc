{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "console": false,
    "document": false,
    "window": false
  },
  "plugins": ["prettier"],
  "rules": {
    "react/display-name": 0,
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": false,
      "jsxBracketSameLine": true
    }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
